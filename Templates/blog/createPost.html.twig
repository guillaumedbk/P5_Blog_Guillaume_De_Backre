{% extends "base.html.twig" %}

{% block body %}
    <header>
    <!-- Jumbotron -->
    <div class="p-5 text-center bg-light">
        <h1 class="mb-3">Créez votre post</h1>
    </div>
    <!-- Jumbotron -->
    </header>

    <section class="page-section" id="contact">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <!-- Registration Form -->
                    <form action="/post/create" method="post">
                        <!-- Title input-->
                        <div class="form-floating mb-3">
                            <input class="form-control" type="text" id="title" name="title" placeholder="Titre du post" required />
                            <label for="firstname">Titre du post</label>
                        </div>
                        <!-- Chapo input-->
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="chapo" name="chapo" placeholder="Châpo" required />
                            <label for="name">Chapô</label>
                        </div>
                        <!-- Content input-->
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="content" name="content" placeholder="Contenu" required />
                            <label for="name">Contenu</label>
                        </div>
                        <!-- Submit Button-->
                        <button class="btn btn-primary btn-xl" type="submit" value="Créer">Créer</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}