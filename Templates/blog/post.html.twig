{% extends "base.html.twig" %}

{% block body %}
    <header>
        <!-- Jumbotron -->
        <div class="p-5 text-center bg-light">
            <h1 class="mb-3">{{ post.title }}</h1>
            <h4 class="mb-3">{{ post.chapo }}</h4>
            {% if session.USER.status is same as 'admin' %}
            <a class="btn btn-primary" href="/P5_Blog_Guillaume_De_Backre/post/update/{{ postId }}" role="button">Modifier le post</a>
                <a class="btn btn-primary" href="/P5_Blog_Guillaume_De_Backre/post/delete/{{ postId }}" role="button">Supprimer le post</a>
            {% endif %}
        </div>
        <!-- Jumbotron -->
    </header>
    <!-- Post Content-->
    <article class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <p><u><em>Contenu:</em></u></p>
                    <p>{{ post.content }}</p>
                    <p><u><em>Commentaires:</em></u></p>
                    <!-- Comments -->
                    {% if comments %}
                    {% for comment in comments %}
                    <div class="post-preview">
                        <p class="post-title"> {{ comment.content }} </p>
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">

                    <!-- * * SB Forms Contact Form * *-->
                    <form action="/P5_Blog_Guillaume_De_Backre/comment/{{ postId }}" method="post">
                        <!-- Titre input-->
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="comment" name="comment" placeholder="Votre commentaire:" required/>
                            <label for="comment">Votre commentaire:</label>
                        </div>
                        <!-- Submit Button-->
                        <button class="btn btn-primary btn-lg" type="submit" value="Envoyer">Envoyer</button>

                    </form>
                </div>
            </div>

        </div>
    </article>

{% endblock %}