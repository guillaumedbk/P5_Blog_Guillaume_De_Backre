{% extends "base.html.twig" %}
{% block body %}
<body id="page-top">
<!-- Post creation Section-->
<section class="page-section" id="contact">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Modifier le user</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
        </div>
        <!-- Contact Section Form-->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                {% if user %}
                <!-- * * * * * * * * * * * * * * *-->
                <form action="/user/update/{{ user.id }}" method="post">
                    <!-- Firstname input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" id="firstname" name="firstname" placeholder="Prénom" value="{{ user.firstname }}" required />
                        <label for="firstname">Prénom</label>
                    </div>
                    {% if checkErrors.firstname %}
                        {% for key, value in checkErrors.firstname %}
                            <div class="alert alert-danger" role="alert">
                                Firstname : {{ value }} <br>
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- Name input-->
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Nom" value="{{ user.name }}" required />
                        <label for="name">Nom</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">Veuillez renseigner votre nom</div>
                    </div>
                    {% if checkErrors.name %}
                        {% for key, value in checkErrors.name %}
                            <div class="alert alert-danger" role="alert">
                                Name : {{ value }} <br>
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- Email input-->
                    <div class="form-floating mb-3">
                        <label for="email">Email</label><br />
                        <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required />
                    </div>
                    {% if checkErrors.email %}
                        {% for key, value in checkErrors.email %}
                            <div class="alert alert-danger" role="alert">
                                Email : {{ value }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- Password input-->
                    <div class="form-floating mb-3">
                        <label for="password">Choisissez votre mot de passe</label><br />
                        <input type="password" class="form-control" id="password" name="password" value="{{ user.password }}"required />
                    </div>
                    {% if checkErrors.password %}
                        {% for key, value in checkErrors.password %}
                            <div class="alert alert-danger" role="alert">
                                Password : {{ value }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- Bio input-->
                    <div class="form-floating mb-3">
                        <label for="content">Biographie</label><br />
                        <textarea class="form-control" id="bio" name="bio">{{ user.bio }}</textarea>
                        <div class="invalid-feedback" data-sb-feedback="message:required">Veuillez entrer votre contenu.</div>
                    </div>
                    {% if checkErrors.bio %}
                        {% for key, value in checkErrors.bio %}
                            <div class="alert alert-danger" role="alert">
                                Bio : {{ value }}
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl" type="submit" value="Envoyer" name="userform">Mettre à jour</button>

                </form>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
